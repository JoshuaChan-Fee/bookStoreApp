<%= turbo_frame_tag :book_form do %>
  <%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :name, class:"form-control", placeholder:"Book Name" %>
    </div>

    <div class="field">
      <%= form.number_field :stock, class:"form-control", placeholder:"Stock" %>
    </div>

    <div class="field">
      <%= form.text_field :status, class:"form-control", placeholder:"Status" %>
    </div>

    <div class="field">
      <%= form.collection_select :store_id, Store.order(:name), :id, :name, { include_blank: false }, { class: "form-control" } %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-success"%>
    </div>
  <% end %>
<% end %>
