<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= turbo_stream_from :books %>
<%= turbo_frame_tag :book_form do %>
  <%= render 'books/form', book: @book %>
<% end %>
<h3>Book List</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stock</th>
      <th>Status</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <%= turbo_frame_tag :books do %>
      <%= render @books %>
    <% end %>
  </tbody>
</table>


<%# link_to 'New Book', new_book_path %>
