<p id="notice"><%= notice %></p>

<h3>
  <strong>Store Name:</strong>
  <%= @store.name %>
</h3>

<h4>List of books</h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stock</th>
      <th>Status</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %></td>
        <td><%= book.stock %></td>
        <td><%= book.status %></td>
        <td><%= book.store_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_store_path(@store) %> |
<%= link_to 'Back', stores_path %>
