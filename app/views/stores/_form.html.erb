<%= turbo_frame_tag :store_form do %>
  <%= form_with(model: store, local: true) do |form| %>
    <% if store.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

        <ul>
          <% store.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :name, class:"form-control", placeholder:"Store Name" %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-success" %>
    </div>
  <% end %>
<% end %>