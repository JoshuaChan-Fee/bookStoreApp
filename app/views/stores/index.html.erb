<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<%= turbo_stream_from :stores %>
<%= turbo_frame_tag :store_form do %>
  <%= render 'stores/form', store: @store %>
<% end %>
<h3>Book Store List</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <%= turbo_frame_tag :stores do %>
      <%= render @stores %>
    <% end %>
  </tbody>
</table>

<%# link_to 'New Store', new_store_path %>
